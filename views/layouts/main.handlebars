<body>

    <header>
      <h1>
        <a class="style" href="/">CryptoHub</a>
      </h1>
      <h1 class="right">
        {{#if loggedIn}}
        <a class="style right" href="/dashboard">dashboard</a>
        <button id="logout" class="btn-no-style right">logout</button>
        {{else}}
        <a class="style right" href="/login">login</a>
