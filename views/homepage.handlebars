<div id='parent' class="container-fluid h-100">
  <div id="parentRow" class="row h-100">

    <div id="leftContainer" class="col-12 col-lg-3 col-xl-2">
        
          <form id="cryptoForm">
            <div id="searchDiv">
                <label>
                  <h5 class="center">Search for a Cryptocurreny:</h5>
                </label>
                <input
                  name="cryptoName"
                  id="cryptoName"
                  placeholder="Litecoin"
                  class="input"
                />
                  <button type="submit" id="searchBtn">
                    Search
                  </button>
            </div>
          </form>  

          {{!-- {{#if loggedIn}}    --}}
          <div>
            <h5>Cryptocurrencies: </h5>
              <div id="searchedContainer" class="align-middle">
                <div id="mostRecentSearchedContainer" class="is-small">
                  <!-- Container for the crypto just searched -->
              </div>
              <div id="CryptoSearchedContainer" class="is-medium">
                <button class="searchedButtons swipe">Bitcoin</button> <br>
                <button class="searchedButtons swipe">Litecoin</button>
                <!-- currencies already searched for will be displayed here as buttons that, when clicked, will bring up the desired information -->
              </div>
            </div>
            {{!-- {{/if}} --}}
      </div>
    </div>

    <div id="middleContainer" class="col-12 col-lg-9 col-xl-8">
      <div id="currencyData" class="container-fluid h-100">
        <div class="row h-100">
          <div id="middleRow" class="col-12 d-flex flex-wrap justify-content-around align-content-start">
            <div class="card" style="width: 18rem;">
              <img src="/images/bitcoin.png" class="card-img-top" alt="bitcoin logo">
              <div class="card-body">
                <h5 class="card-title">Bitcoin</h5>
                <a class="priceDetails" href="#">View price details</a>
                {{#if loggedIn}}
                <div class="heart"><button class="heartBtn">♡</button></div>
                {{/if}}
              </div>
            </div>
            <div class="card" style="width: 18rem;">
              <img src="/images/litecoin.jpg" class="card-img-top" alt="litecoin logo">
              <div class="card-body">
                <h5 class="card-title">Litecoin</h5>
                <a class="priceDetails" href="#">View price details</a>
                {{#if loggedIn}}
                <div class="heart"><button class="heartBtn">♡</button></div>
                {{/if}}
              </div>
            </div>
            <div class="card" style="width: 18rem;">
              <img src="/images/dogecoin.jpg" class="card-img-top" alt="dogecoin logo">
              <div class="card-body">
                <h5 class="card-title">Dogecoin</h5>
                <a class="priceDetails" href=`/specific-coin/${id}`>View price details</a>
                {{#if loggedIn}}
                <div class="heart"><button class="heartBtn">♡</button></div>
                {{/if}}
              </div>
            </div>
            <div class="card" style="width: 18rem;">
              <img src="/images/eth.svg" class="card-img-top" alt="ethereum logo">
              <div class="card-body">
                <h5 class="card-title">Ethereum</h5>
                <a class="priceDetails" href="#">View price details</a>
                {{#if loggedIn}}
                <div class="heart"><button class="heartBtn">♡</button></div>
                {{/if}}
              </div>
            </div>
            <div class="card" style="width: 18rem;">
              <img src="/images/tether.png" class="card-img-top" alt="tether cryptocurrency logo">
              <div class="card-body">
                <h5 class="card-title">Tether</h5>
                <a class="priceDetails" href="#">View price details</a>
                {{#if loggedIn}}
                <div class="heart"><button class="heartBtn">♡</button></div>
                {{/if}}
              </div>
            </div>
            <div class="card" style="width: 18rem;">
              <img src="/images/xrp.png" class="card-img-top" alt="xrp logo">
              <div class="card-body">
                <h5 class="card-title">XRP</h5>
                <a class="priceDetails" href="#">View price details</a>
                {{#if loggedIn}}
                <div class="heart"><button class="heartBtn">♡</button></div>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="rightContainer" class="col-12 col-lg-12 col-xl-2">
      <h4>Related News: </h4>   
